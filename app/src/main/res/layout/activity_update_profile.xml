<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.UpdateProfileActivity"
        android:orientation="vertical">

    <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

    <TextView
            android:text="Profilini Güncelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="40sp"
            android:fontFamily="@font/pacifico_regular" />

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Ad:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textSize="20sp"
                        android:textColor="#F44336" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/firstnameEditText"
                        android:layout_weight="1"
                        android:hint="Adınız" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textSize="20sp"
                        android:text="Soyad:"
                        android:fontFamily="@font/pacifico_regular"
                        android:textColor="#F44336"/>

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/surnameEditText"
                        android:layout_weight="1"
                        android:hint="Soyadınız" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Giriş Yılı:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textSize="20sp"
                        android:textColor="#F44336"/>

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/entryYearEditText"
                        android:layout_weight="1"
                        android:hint="Yıldızlı olduğunuz yıl" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Mezun Yılı:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textSize="20sp"
                        android:textColor="#F44336"/>

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/graduateYearEditText"
                        android:layout_weight="1"
                        android:hint="Lisanstan mezun olduğunuz yıl" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Lisans:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/lisansEditText"
                        android:layout_weight="1"
                        android:hint="Lisans bölümünüz" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Yüksek Lisans:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/yuksekLisansEditText"
                        android:layout_weight="1"
                        android:hint="Yüksek Lisans bilgisi" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Doktora:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/doktoraEditText"
                        android:layout_weight="1"
                        android:hint="Doktora bilgisi" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Ülke:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/countryEditText"
                        android:layout_weight="1"
                        android:hint="Şu anda neredesiniz" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Şehir:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/cityEditText"
                        android:layout_weight="1"
                        android:hint="Şu anda neredesiniz" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Şirket:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/companyEditText"
                        android:layout_weight="1"
                        android:hint="Şu anda neredesiniz" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="İletişim emaili:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/emailEditText"
                        android:layout_weight="1"
                        android:hint="Başkalarının size ulaşması için" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:text="Telefon no:"
                        android:fontFamily="@font/pacifico_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:textSize="20sp" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/phoneEditText"
                        android:layout_weight="1"
                        android:hint="Başkalarının size ulaşması için" />

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            tools:srcCompat="@tools:sample/avatars"
                            android:id="@+id/takePhotoView"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <Button
                            android:text="Fotoğraf Çek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/takePhotoBtn" />

                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <Button
                            android:text="Galeriden Seç"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/choosePhotoBtn"
                            android:layout_weight="1" />

                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <Button
                    android:text="KAYDET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"
                    android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>